rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per gli utenti
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Permetti la lettura del referralCode per la verifica (solo il codice, non tutti i dati)
      allow read: if request.auth != null && 
                     resource.data.keys().hasOnly(['referralCode']);
    }
    
    // Regole per gli esami
    match /users/{userId}/exams/{examId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regole per gli esami sostenuti
    match /users/{userId}/passedExams/{examId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regole per i piani settimanali
    match /users/{userId}/plans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regole per i task completati
    match /users/{userId}/completedTasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regole per i task saltati
    match /users/{userId}/skippedTasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regole per i referral (solo scrittura da Firebase Functions)
    match /referrals/{referralId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo Firebase Functions pu√≤ scrivere
    }
  }
}

